#!/bin/sh

echo "ğŸ” Running pre-push checks..."

# Run Prettier format (auto-fix formatting and sort imports)
echo "ğŸ“ Formatting code with Prettier..."
yarn format || exit 1

# Run ESLint with auto-fix
echo "ğŸ” Running ESLint..."
yarn lint:fix || exit 1

# Run TypeScript compile check
echo "ğŸ”¨ Checking TypeScript compilation..."
yarn typecheck || exit 1

# Run tests only for affected files
echo "ğŸ§ª Running tests for affected files..."
yarn test:affected || exit 1

# Stage any formatting changes
git add -A

echo "âœ… All checks passed!"

